{
 "absolute_value": 0,
 "align_labels_right": 0,
 "creation": "2021-06-15 07:18:49.617144",
 "custom_format": 1,
 "default_print_language": "en",
 "disabled": 0,
 "doc_type": "Payment Entry",
 "docstatus": 0,
 "doctype": "Print Format",
 "font": "Default",
 "html": "<style>
	.print-format {
		padding: 0px;
	}
	.table-tight-rows td {
	    padding-top: 0 !important;
	    padding-bottom: 0 !important;
	}
	@media screen {
		.print-format {
			padding: 0in;
		}
	}
</style>
{% macro render_details(doc, party) -%}
    <div style="position: relative; width: 100%; height: 0.5cm;">
        <span style="top: 0; left:0.00m;
                position: absolute; width: 9.95cm;
    			line-height:0.6cm; font-size: 12px; font-family:'Times New Roman'">
        <b>Name:</b>  {{party.name}}</span>
        <span style="top: 0; left:10.00cm;
    			position: absolute; width: 4.95cm;
    			line-height:0.6cm; font-size: 12px; font-family:'Times New Roman' ">
        <b>Account #</b>  {{party.pan or ''}}</span>
        <span style="top: 0; right:0;
    			position: absolute; width: 4.0cm;
    			line-height:0.6cm; font-size: 12px; font-family:'Times New Roman'">
        <b>Check Date:</b>  {{ frappe.utils.formatdate(doc.reference_date) or '' }}</span>
    </div>
    <table class="table table-bordered table-condensed" style="min-height: 7.00cm; margin-top: 0.15cm; font-size: 12px; font-family:'Times New Roman'">
        <thead>
            <tr style="text-align: center">
                <th style="text-align: center">REFERENCE</th>
                <th style="text-align: center">DUE DATE</th>
                <th style="text-align: center">OUTSTANDING AMOUNT</th>
                <th style="text-align: center">DISCOUNT TAKEN</th>
                <th style="text-align: center">ALLOCATED AMOUNT</th>
            </tr>
       </thead>
       <tbody>
        {% set total_discount = 0.00 %}
        {% for pay_ref in doc.references[:9] %}
            <tr class="table-tight-rows" style="height:0.25cm; border-top-style: hidden;">
                <td style=""> {{pay_ref.bill_no or ''}}</td>
                <td style="">{{frappe.utils.formatdate(pay_ref.due_date) or ''}}</td>
                <td style="text-align: right;">{{frappe.utils.fmt_money(pay_ref.get_formatted("allocated_amount") or 0.00,currency="$")}}</td>
            </tr>
            {% set total_discount = pay_ref.discount_amount or 0 + total_discount or 0 %}
        {% endfor %}
            <tr style="border-top-style: hidden;">
                <td/>
                <td/>
                <td/>
                <td/>
                <td style="text-align: right">
                    {% if doc.references|length > 9 %}More...{% endif %}
                </td></tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan=2 style="text-align: right"> TOTAL</td>
                <td style="text-align: right">{{frappe.utils.fmt_money(doc.references|sum(attribute='allocated_amount') or 0.00,currency="$")}}</td>
            </tr>
        </tfoot>
    </table>
{%- endmacro %}
{% set party = frappe.get_doc(doc.party_type, doc.party) %}
<div style="position: relative; top:0.0cm">
	<div style="width:21.59cm;height:27.94cm;">
		<span style="top:1.5cm; left:18.25cm;
			position: absolute; font-size: 15px; font-family:'Times New Roman'">
			{{ frappe.utils.formatdate(doc.reference_date) or '' }}
		</span>
		<span style="top:3.5cm;left: 2.5cm;
			position: absolute;  min-width: 6cm; font-size: 15px; font-family:'Times New Roman'">
			<b>{{doc.party_name}}</b><br/>
            {% set address_list = frappe.get_all('Address', [["Dynamic Link", "link_doctype", "=", doc.party_type], ["Dynamic Link", "link_name", "=", doc.party],["Dynamic Link", "parenttype", "=", "Address"],["Address","is_primary_address", "=", "1"]], "*") %}
            {% for address in address_list %}
                {{address.address_line1}}<br/>
                {{address.city}}, {{address.state}} {{address.pincode}}
            {% endfor %}
		</span>
		<span style="top:2.65cm; left:1.9cm;
			position: absolute; display: block; width: 14.0cm;
			line-height:0.5cm; font-size: 15px; font-family:'Times New Roman'; word-wrap: break-word;">
				{{ money_in_words(doc.paid_amount) or '' }}
		</span>
		<span style="top:6.1cm; left:15.5cm;
			position: absolute; display: block;">
				<img src="{{doc.signature}}" style="width: 150px;" alt="" srcset="">
		</span>
		<span style="top:6.5cm; left:1.4cm;
			position: absolute; display: block; width: 14.0cm;
			line-height:0.5cm; font-size: 12px; font-family:'Times New Roman'; word-wrap: break-word;">
				{% for item in doc.references %}
				{% if frappe.db.get_value("Purchase Invoice",item.reference_name,"bill_no") %}
				{{frappe.db.get_value("Purchase Invoice",item.reference_name,"bill_no")}} |
				{% else %}
				- |
				{% endif %}

				{% endfor %}
		</span>
		<span style="top:2.1cm; left:1.9cm;
			position: absolute; display: block; width: 14.0cm;
			line-height:0.5cm; font-size: 15px; font-family:'Times New Roman'; word-wrap: break-word;">
				{{doc.party_name}}
		</span>
		<span style="top:2.75cm;left: 18.15cm;
			position: absolute; min-width: 3.5cm; font-size: 15px; font-family:'Times New Roman'">
			{{'{:*>15}'.format(doc.get_formatted("base_paid_amount").strip('$ ')) or '{:*>15}'.format(doc.get_formatted("base_received_amount").strip('$ '))}}
		</span>
		<span style="top:10.00cm;left:1.0cm;
			position: absolute;  width: 19cm; height: 7.75cm; font-size: 15px; font-family:'Times New Roman'; overflow: hidden;">
		    {{ render_details(doc, party) }}
		</span>
		<span style="top:18.75cm;left:1.0cm;
			position: absolute;  width: 19cm; min-height: 7.75cm; font-size: 15px; font-family:'Times New Roman'; overflow: hidden;">
		    {{ render_details(doc, party) }}
		</span>
	</div>
</div>",
